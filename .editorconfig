root = true

[*]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
max_line_length = 120
ij_visual_guides = 120
ij_continuation_indent_size = 8

[{*.kt,*.kts}]
insert_final_newline = true
ij_kotlin_code_style_defaults = KOTLIN_OFFICIAL
ij_kotlin_keep_indents_on_empty_lines = false

[{*.yml,*.yaml}]
indent_size = 2
